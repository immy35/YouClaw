# YouClaw Configuration Template
# Copy this to .env and fill in your values

# ===== Ollama Configuration =====
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:1.5b-instruct
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=120

# ===== Bot Tokens =====
# Get Telegram token from @BotFather
TELEGRAM_BOT_TOKEN=

# Get Discord token from Discord Developer Portal
DISCORD_BOT_TOKEN=

# ===== Platform Enable/Disable =====
ENABLE_TELEGRAM=false
ENABLE_DISCORD=false

# ===== Search Engine =====
SEARCH_ENGINE_URL=http://localhost:8080/search

# ===== Email Configuration (Optional) =====
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
ENABLE_EMAIL=false

# ===== Bot Settings =====
BOT_PREFIX=!
MAX_CONTEXT_MESSAGES=20
DATABASE_PATH=./data/bot.db
LOG_LEVEL=INFO

# ===== Admin Identity =====
# Format: platform:user_id (e.g., telegram:123456789)
ADMIN_USER_IDENTITY=telegram:default
